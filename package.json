{
  "name": "react-fake-code-typing",
  "description": "Fake code typing for React.js",
  "author": "StÃ©phane Monnot",
  "user": "stephane-monnot",
  "version": "1.0.0",
  "scripts": {
    "start": "catalog start docs",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:lint": "eslint . --ignore-path .gitignore",
    "gh-pages": "catalog build docs",
    "gh-pages:deploy": "gh-pages -d docs/build",
    "dist:css": "cleancss -o style.min.css style.css",
    "dist:es6": "del-cli ./dist-es6 && cross-env BABEL_ENV=es6 babel ./src --out-dir ./dist-es6",
    "dist:modules": "del-cli ./dist-modules && cross-env BABEL_ENV=modules babel ./src --out-dir ./dist-modules",
    "preversion": "npm run test",
    "prepublishOnly": "npm run dist:es6 && npm run dist:modules && npm run dist:css",
    "postpublish": "npm run gh-pages && npm run gh-pages:deploy",
    "postinstall": "node lib/post_install.js"
  },
  "main": "dist-modules",
  "module": "dist-es6",
  "jsnext:main": "dist-es6",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "catalog": "^3.0.0",
    "chai": "^4.1.2",
    "clean-css-cli": "^4.1.10",
    "cross-env": "^5.1.3",
    "del-cli": "^1.1.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.0.2",
    "eslint-plugin-react": "^7.4.0",
    "gh-pages": "^1.0.0",
    "git-prepush-hook": "^1.0.2",
    "jest": "^21.2.1",
    "jest-css-modules": "^1.1.0",
    "purecss": "^1.0.0",
    "react": "^16.0.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.0.0",
    "react-github-corner": "^1.0.0",
    "react-syntax-highlighter": "^6.1.2",
    "replace": "^0.3.0",
    "rimraf": "^2.6.2",
    "sync-exec": "^0.6.2",
    "webpack": "^3.6.0"
  },
  "peerDependencies": {
    "react": ">= 0.11.2 < 16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stephane-monnot/react-fake-code-typing.git"
  },
  "homepage": "https://stephane-monnot.github.io/react-fake-code-typing/",
  "bugs": {
    "url": "https://github.com/stephane-monnot/react-fake-code-typing/issues"
  },
  "jest": {
    "collectCoverage": true,
    "setupFiles": [
      "<rootDir>/__tests__/shim.js"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/__tests__/shim.js"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "moduleDirectories": [
      "node_modules",
      "packages"
    ]
  },
  "keywords": [
    "react",
    "reactjs",
    "React Fake Code Typing"
  ],
  "license": "MIT",
  "pre-push": [
    "test"
  ]
}
